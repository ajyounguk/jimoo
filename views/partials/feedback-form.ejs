<!-- 1. List Events -->
<div id="pin-div" class="menu-div padded">
    <form method="POST" action="/feedback/pin">

        <span>Event PIN</span>
        <hr>
        <br>

        <div class="groupdiv">

            <label>PIN</label>


            <input class="field-pin" placeholder="" id="pin1" type="text" name="pin1" maxlength="3" required>-
            <input class="field-pin" placeholder="" id="pin2" type="text" name="pin2" maxlength="3" required>

            <input type="submit" value="OK">

        </div>
    </form>
    <% include ./debug.ejs %>
</div>

