<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="/assets/styles.css" />
    <link rel="shortcut icon" type="image/x-icon" href="/assets/favicon.ico">
    <title>Jimoo</title>
</head>

<body class="simple-style" onLoad="activateUI('<%= ui.flow.activateDiv %>','<%= ui.flow.activateButton %>')">

    
    <div class="title groupdiv">

        <table class="title">

            <tr>
                <td>
                    <h1 class="title">Jimoo</h1>
                </td>
                <td class="subtitle">
                    <span class="subtitle">easy feedback</span>
                </td>
            </tr>
        </table>


        <hr>
        <div class="buttons">
            <input id='create-button' class="menu-button" type="submit" value="Create Event" onclick="activateUI('create-div','create-button')">
            <input id='list-button' class="menu-button" type="submit" value="Event Admin" onclick="activateUI('list-div','list-button')">
            <input type="button" onclick="window.location.href='/'" value="Feedback">  
        </div>
    </div>


    <!-- Form Partials -->
    <% include ./partials/feedback-admin-form.ejs %>
    <% include ./partials/feedback-form.ejs %>   

    <!-- navbar buttons control  -->
    <!-- toggles div sections for the forms and the buttons) -->
    <script>
        function activateUI(activateDiv, activateButton) {

            // enable divs
            var i;

            var divs = document.getElementsByClassName("menu-div");
            var buttons = document.getElementsByClassName("menu-button");

            // reset/disable all divs
            for (i = 0; i < divs.length; i++) {

                if (divs[i] == document.getElementById(activateDiv)) {
                    divs[i].style.display = "block";
                } else {
                    divs[i].style.display = "none";
                }
            }


            // disable all buttons
            for (i = 0; i < buttons.length; i++) {
                if (buttons[i] == document.getElementById(activateButton)) {
                    buttons[i].style.background = "rgb(0, 9, 12)";
                } else {
                    buttons[i].style.background = "";
                }
            }
        }
    </script>

</body>

</html>